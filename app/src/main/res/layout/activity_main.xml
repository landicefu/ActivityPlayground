<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable name="navigationView" type="tw.lifehackers.sample.activityplayground.ActivityNavigationView"/>
    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="30dp"
            android:orientation="vertical"
            android:gravity="center_horizontal">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{navigationView.activityIdentity}"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="standard mode"
                android:onClick="@{() -> navigationView.launchActivityInStandardMode()}"/>

    </LinearLayout>

</layout>
